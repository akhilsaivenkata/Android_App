<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".ListItemsActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarSai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#4CAF50"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/prevBtnSai"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:background="#4CAF50"
            android:onClick="onPrevButtonClick"
            android:rotationY="-180"
            app:srcCompat="@android:drawable/ic_media_play" />
    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"

        android:background="@color/gold"
        android:columnCount="2"
        android:rowCount="2">


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="fill"
            android:text="@string/RadioButton" />

        <CheckBox
            android:id="@+id/checkBoxSai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="fill"
            android:text="@string/CheckBox" />

        <Switch
            android:id="@+id/switchSai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="fill"
            android:text="@string/SwitchTextSai" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="fill"
            android:onClick="onLoginClickSai"
            app:srcCompat="@android:drawable/ic_menu_camera" />


    </GridLayout>
</RelativeLayout>